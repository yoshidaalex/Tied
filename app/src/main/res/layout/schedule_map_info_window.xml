<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
                android:padding="20dp"
                android:background="@android:color/transparent"
    android:layout_height="wrap_content">
    <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curve_white_background">
    <LinearLayout
        android:id="@+id/img_layout"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_margin="5dp"
            android:layout_height="50dp"

            android:scaleType="fitXY"
            android:src="@drawable/default_avatar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/distance_layout"
        android:layout_toRightOf="@+id/img_layout"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple Corporation"
            android:textColor="@color/schedule_title_bg_color"
            android:textStyle="bold"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginRight="4dp"
                android:alpha="0.5"
                android:visibility="gone"
                android:src="@drawable/icon_pin_grey" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/light_gray2"
                android:textSize="12sp" />

        </LinearLayout>
        <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1.3miles"
                android:layout_marginBottom="5dp"
                android:textColor="@color/schedule_title_bg_color"
                android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/distance_layout"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/right_arrow" />
    </LinearLayout>


</RelativeLayout>
    </RelativeLayout>
