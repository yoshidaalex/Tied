<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Privacy"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/textView5"
            android:layout_centerInParent="true"
            style="@style/EditTextStyle" />

        <LinearLayout
            android:onClick="onClick"
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/action_bar_icon_height"
                android:layout_height="@dimen/action_bar_icon_height"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_back_arrow"
                android:padding="@dimen/action_bar_icon_padding"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="15dp"
        android:text="@string/control_who_sees_your_activities"
        android:textSize="16sp"
        android:textColor="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rlSales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="@string/sales"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/ivArrow"
                android:gravity="center_vertical"
                android:text="@string/privates"
                android:textColor="@color/light_gray2" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_gray"
                android:layout_marginRight="15dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/imageView20"
                android:visibility="gone"
                android:src="@drawable/password_grey"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvSales" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:visibility="gone"
            android:background="@color/light_gray2"></View>

        <RelativeLayout
            android:id="@+id/rlGoals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:padding="0dp"
                android:text="@string/goals"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="14sp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/all_co_workers_can_see"
                android:textColor="@color/light_gray2"
                android:layout_marginRight="15dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/light_gray2"></View>

        <RelativeLayout
            android:id="@+id/rlDailyActivities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnDailyActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:padding="0dp"
                android:text="@string/daily_activities"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDailyActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ivDailyActivities"
                android:gravity="center_vertical"
                android:text="@string/tmp_share_text"
                android:textColor="@color/light_gray2" />

            <ImageView
                android:id="@+id/ivDailyActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_gray"
                android:layout_marginRight="15dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/light_gray2"></View>

        <RelativeLayout
            android:id="@+id/rlClients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnClients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:padding="0dp"
                android:text="@string/clients"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvClients"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ivClients"
                android:gravity="center_vertical"
                android:text="@string/tmp_share_text"
                android:textColor="@color/light_gray2" />

            <ImageView
                android:id="@+id/ivClients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_gray"
                android:layout_marginRight="15dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/light_gray2"></View>

        <RelativeLayout
            android:id="@+id/rlTeritorry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnTeritorry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:padding="0dp"
                android:text="@string/territory"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTeritorry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ivTeritorry"
                android:gravity="center_vertical"
                android:text="@string/privates"
                android:textColor="@color/light_gray2" />

            <ImageView
                android:id="@+id/ivTeritorry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_gray"
                android:layout_marginRight="15dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/imageView22"
                android:src="@drawable/password_grey"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/tvTeritorry" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/light_gray2"></View>

        <RelativeLayout
            android:id="@+id/rlLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:padding="0dp"
                android:text="@string/line"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/ivLine"
                android:gravity="center_vertical"
                android:text="@string/privates"
                android:textColor="@color/light_gray2" />

            <ImageView
                android:id="@+id/ivLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_gray"
                android:layout_marginRight="15dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/imageView23"
                android:visibility="gone"
                android:src="@drawable/password_grey"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvLine" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/light_gray2"></View>

        <RelativeLayout
            android:id="@+id/rlIndustry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/imageView24"
                android:src="@drawable/password_grey"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/tvIndustry" />

            <TextView
                android:id="@+id/btnIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:padding="0dp"
                android:text="@string/industry"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/ivIndustry"
                android:gravity="center_vertical"
                android:text="@string/privates"
                android:textColor="@color/light_gray2" />

            <ImageView
                android:id="@+id/ivIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_gray"
                android:layout_marginRight="15dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>