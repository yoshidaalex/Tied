<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_switch_backround1"
    android:baselineAligned="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        style="@style/EditTextStyle"
        android:textColor="@color/grey"
        android:layout_height="wrap_content"
        android:text="ADD YTD SALES"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="match_parent"
        style="@style/EditTextStyle"
        android:textColor="@color/grey"
        android:layout_height="wrap_content"
        android:text="What&apos;s your Last year YTD?"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:id="@+id/txt_description" />

    <EditText
        android:id="@+id/txt_value"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Input"
        android:padding="5dp"
        android:textColorHint="@color/light_gray2"
        style="@style/EditTextStyle"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/background_rounded_rectangle" />
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="0.1dp"
        android:background="@color/light_gray2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="54dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:id="@+id/txt_cancel"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

        <View
            android:layout_height="match_parent"
            android:layout_width="0.1dp"
            android:background="@color/light_gray2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add"
            android:id="@+id/txt_add"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

</LinearLayout>