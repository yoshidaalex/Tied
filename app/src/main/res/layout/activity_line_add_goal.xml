<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:text="Add New Goal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/action_bar_icon_height"
                android:layout_height="@dimen/action_bar_icon_height"
                android:padding="@dimen/action_bar_icon_padding"
                android:src="@mipmap/btn_back_arrow" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a goal"
                android:id="@+id/textView25"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What would you like to achieve for your client?"
                android:id="@+id/textView26"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/sale_layout"
            android:background="@drawable/make_more_sales">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make More Sales"
                android:id="@+id/textView1"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="GO"
                android:textColor="@color/gray_light"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/background_rounded_rectangle1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_more_clients"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/clients_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add More Clients"
                android:id="@+id/textView2"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="GO"
                android:id="@+id/textView3"
                android:textColor="@color/gray_light"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/background_rounded_rectangle1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/make_more_visit"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/visit_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make More Visits to Clients"
                android:id="@+id/textView4"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="GO"
                android:id="@+id/textView5"
                android:textColor="@color/gray_light"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/background_rounded_rectangle1" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
