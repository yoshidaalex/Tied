<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:id="@+id/main_layout">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
                style="@style/ActionBarIcon"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true"
                android:onClick="onClick"
                android:layout_centerVertical="true"
                android:id="@+id/img_back"
                android:src="@drawable/btn_back_arrow" />

        <TextView
            android:id="@+id/txt_lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Lines"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            style="@style/ActionBarIcon"
            android:id="@+id/img_plus"
            android:src="@drawable/plus_thin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />

    </RelativeLayout>


<LinearLayout android:layout_width="match_parent"
              android:orientation="vertical"
    android:background="@android:color/white"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:gravity="center"
              android:layout_gravity="center"
              android:text="All you lines are listed here. Click to Add a line "
              android:layout_margin="30dp"
              android:background="@drawable/white_fill_grey_stroke"
              android:padding="20dp"
              android:textSize="15sp"
        android:textColor="@color/light_gray"
              android:id="@+id/no_results"
              android:layout_height="wrap_content"
        android:visibility="gone" />
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lines_listview"
            android:background="@color/white" />
</LinearLayout>


</LinearLayout>