<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        style="@style/SectionLayout"
        android:background="@color/blue"
        android:layout_marginTop="0dp"
        >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="RELEVANT INFO"
            android:textColor="@color/white"
            android:textStyle="bold"
            style="@style/SectionText"
            android:textSize="14sp"
            android:textIsSelectable="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FieldLabels"
            android:text="WEBSITE"/>

        <EditText
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="http://"
            android:textColor="@color/grey"
            style="@style/EditTextStyle"/>
    </LinearLayout>

    <View
        style="@style/SectionDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FieldLabels"
            android:text="COUNTY\S SPECIAL REQUEST"/>

        <EditText
            android:id="@+id/special_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="35,067,890"
            android:textColor="@color/grey"
            style="@style/EditTextStyle"/>
    </LinearLayout>

    <View
        style="@style/SectionDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FieldLabels"
                android:text="OPENINGS"
                />

            <EditText
                android:id="@+id/openings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:inputType="text"
                android:text=""
                style="@style/EditTextStyle"
                android:textColor="@color/grey"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FieldLabels"
                android:text="REORDERS"
                android:layout_marginBottom="3dip"
                />
            <RelativeLayout android:layout_width="100dip"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/reorders"
                    style="@style/SpinnerStyle"
                    />
                <ImageView android:layout_width="20dip"
                    android:padding="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_down_blue"
                    android:layout_height="20dip"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/SectionDivider"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="0.1dp"
        android:background="@color/light_gray2"
        />

    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <Button android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:id="@+id/cancel_button"
            android:background="@color/white"
            android:textColor="@color/light_gray2"
            android:layout_height="50dp"/>
        <View
            android:layout_height="match_parent"
            android:layout_width="0.1dp"
            android:background="@color/white"/>
        <Button android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Okay"
            android:id="@+id/ok_button"
            android:background="@color/white"
            android:textColor="@color/light_gray2"
            android:layout_height="50dp"/>

    </LinearLayout>

</LinearLayout>