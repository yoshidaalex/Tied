<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="#8c000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Add New Client"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textIsSelectable="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweet. Add a client and begin awesomeness"
                android:id="@+id/textView23"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textSize="13sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/EditTextStyle"
            android:text="Client Legal Name"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FieldLabels"
                android:text="Add Description" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:text="I am able to add text to a line when I create at the same screen, screen is smooth at popup"
                android:textColor="@color/black"
                style="@style/EditTextStyle"

                android:inputType="textMultiLine"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="0.1dp"
            android:background="@color/light_gray2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="54dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:id="@+id/txt_cancel"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal" />

            <View
                android:layout_height="match_parent"
                android:layout_width="0.1dp"
                android:background="@color/light_gray2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add"
                android:id="@+id/txt_add"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>