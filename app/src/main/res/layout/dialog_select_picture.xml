<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/atvCancel"
        android:background="@drawable/bg_white_rounded"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/atvSelectPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/select_photo"
            android:textAllCaps="false"
            android:textColor="@color/blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/light_gray"></View>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/atvTakeNewPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/take_new_photo"
            android:textAllCaps="false"
            android:textColor="@color/blue" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.1dp"-->
            <!--android:background="@color/light_gray"></View>-->

        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/atvOption3"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:gravity="center"-->
            <!--android:padding="20dp"-->
            <!--android:text="@string/option_3"-->
            <!--android:textAllCaps="false"-->
            <!--android:textColor="@color/blue" />-->

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/atvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_white_rounded"
        android:gravity="center"
        android:padding="20dp"
        android:text="CANCEL"
        android:textAllCaps="false"
        android:textColor="@color/red_color" />
</RelativeLayout>